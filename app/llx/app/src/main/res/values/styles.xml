<resources>

	<style name="bubble_item_base">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16dp</item>
		<item name="android:paddingTop">7dip</item>
		<item name="android:paddingBottom">7dip</item>
		<item name="android:paddingLeft">12dip</item>
		<item name="android:paddingRight">12dip</item>
		<item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#262626</item>
	</style>

    <style name="bubble_item_icon" parent="bubble_item">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@null</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bbl_ttl_base">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">11dp</item>
        <item name="android:padding">3dp</item>
    </style>

	<style name="sm_button" parent="ab_text">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/icon_text_size</item>
		<item name="android:background">@drawable/ab_btn_bg</item>
	</style>

    <style name="ip_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/icon_text_size</item>
    </style>

    <style name="sc_text_base">
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:typeface">monospace</item>

        <item name="android:gravity">top</item>
    </style>

    <style name="ab_btn_icon" parent="ab_text">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ab_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="eb_bar">
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/eb_bar_bg</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="eb_btn">
        <item name="android:textColor">@color/eb_btn_text</item>
        <item name="android:textSize">@dimen/eb_text_size</item>
        <item name="android:background">@drawable/eb_btn_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="eb_btn.h" parent="eb_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="eb_btn.v" parent="eb_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="eb_sep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">#dfff</item>
    </style>
    <style name="hs_btn" parent="eb_btn">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="list_item">
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
    </style>

    <style name="zorder_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="bubble_item" parent="bubble_item_base">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/bubble_item_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="bbl_ttl" parent="bbl_ttl_base">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/bubble_item_bg</item>
    </style>

    <style name="ab_bg">
        <item name="android:elevation">8dp</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="ab_text" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title.Inverse" />

    <style name="bubble_bg">
        <item name="android:background">@drawable/bubble_v13</item>
    </style>

    <style name="bubble_arrow_up_bg">
        <item name="android:src">@drawable/arrow_up_v13</item>
    </style>

    <style name="bubble_arrow_down_bg">
        <item name="android:src">@drawable/arrow_down_v13</item>
    </style>

    <style name="sc_text" parent="sc_text_base">
        <item name="android:background">@null</item>
    </style>

    <style name="AppDialog" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorAccent">@color/color_accent</item>
    </style>

</resources>